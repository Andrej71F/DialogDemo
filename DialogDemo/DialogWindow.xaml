<Window x:Class="DialogDemo.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="Manual"
        Background="White"
        WindowStartupLocation="CenterScreen"
        Focusable="True"
        FocusManager.FocusedElement="{Binding ElementName=ButtonsPanel}">

    <Window.Resources>

        <!-- Dynamic font resources -->
        <sys:Double x:Key="Font.Title">16</sys:Double>
        <sys:Double x:Key="Font.Main">14</sys:Double>
        <sys:Double x:Key="Font.Sub">12</sys:Double>
        <sys:Double x:Key="Font.Button">13</sys:Double>

        <!-- Button style -->
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#707070" />
            <Setter Property="Background" Value="#F0F0F0" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="{DynamicResource Font.Button}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="6,0,0,0" />

            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#0078D7" />
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="Background" Value="#E5F1FB" />
                </Trigger>
                <Trigger Property="IsDefaulted" Value="True">
                    <Setter Property="BorderBrush" Value="#0050A0" />
                    <Setter Property="BorderThickness" Value="2" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="Gray" BorderThickness="1" Padding="10">
        <Grid>

            <!-- Proportional layout -->
            <Grid.RowDefinitions>
                <RowDefinition Height="0.10*" />
                <RowDefinition Height="0.40*" />
                <RowDefinition Height="0.25*" />
                <RowDefinition Height="0.05*" />
                <RowDefinition Height="0.20*" />
            </Grid.RowDefinitions>

            <!-- Title bar -->
            <Grid Grid.Row="0" x:Name="TitleBar" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.20*" />
                    <ColumnDefinition Width="0.80*" />
                </Grid.ColumnDefinitions>

                <Image x:Name="IconImage"
                       Grid.Column="0"
                       Width="32"
                       Height="32"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Stretch="Uniform" />

                <TextBlock x:Name="TitleText"
                           Grid.Column="1"
                           FontSize="{DynamicResource Font.Title}"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           Margin="5,0,0,0" />
            </Grid>

            <!-- Main message -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="0,10,0,5">
                <TextBlock x:Name="MainMessage"
                           FontSize="{DynamicResource Font.Main}"
                           TextWrapping="Wrap"
                           Margin="5" />
            </ScrollViewer>

            <!-- Sub message -->
            <ScrollViewer Grid.Row="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="0,0,0,10">
                <TextBlock x:Name="SubMessage"
                           FontSize="{DynamicResource Font.Sub}"
                           TextWrapping="Wrap"
                           Margin="5" />
            </ScrollViewer>

            <!-- Progress bar -->
            <ProgressBar x:Name="AutoCloseProgress"
                         Grid.Row="3"
                         Height="6"
                         Minimum="0"
                         Maximum="100"
                         Value="100"
                         Visibility="Collapsed"
                         Margin="0,0,0,5" />

            <!-- Buttons -->
            <Grid Grid.Row="4" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.60*" />
                    <ColumnDefinition Width="0.40*" />
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="ButtonsPanel"
                            Grid.Column="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center" />
            </Grid>
        </Grid>
    </Border>
</Window>