<Window x:Class="DialogDemo.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="White"
        WindowStartupLocation="CenterScreen"
        Focusable="True"
        FocusManager.FocusedElement="{Binding ElementName=ButtonsPanel}">
    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="6,3" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#707070" />
            <Setter Property="Background" Value="#F0F0F0" />
            <Setter Property="Foreground" Value="Black" />

            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#0078D7" />
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="Background" Value="#E5F1FB" />
                </Trigger>
                <Trigger Property="IsDefaulted" Value="True">
                    <Setter Property="BorderBrush" Value="#0050A0" />
                    <Setter Property="BorderThickness" Value="2" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="Gray" BorderThickness="1" Padding="10">
        <StackPanel>

            <!-- Title bar -->
            <Border x:Name="TitleBar" Padding="5">
                <DockPanel>
                    <TextBlock x:Name="IconBlock"
                               Width="24"
                               TextAlignment="Center"
                               Margin="0,0,5,0" />
                    <TextBlock x:Name="TitleText"
                               FontWeight="Bold"
                               VerticalAlignment="Center" />
                </DockPanel>
            </Border>

            <!-- Main text -->
            <TextBlock x:Name="MainMessage"
                       Margin="0,10,0,5"
                       TextWrapping="Wrap" />

            <TextBlock x:Name="SubMessage"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap" />

            <!-- PROGRESS BAR (correct place) -->
            <ProgressBar x:Name="AutoCloseProgress"
                         Height="6"
                         Margin="0,0,0,10"
                         Minimum="0"
                         Maximum="100"
                         Value="100"
                         Visibility="Collapsed" />

            <!-- Buttons -->
            <StackPanel x:Name="ButtonsPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right" />
        </StackPanel>
    </Border>
</Window>