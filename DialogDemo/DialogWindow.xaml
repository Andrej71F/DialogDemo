<Window x:Class="DialogDemo.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Border BorderBrush="Gray" BorderThickness="1" Padding="10">
        <StackPanel>

            <!-- Title bar -->
            <Border x:Name="TitleBar" Padding="5">
                <DockPanel>
                    <TextBlock x:Name="IconBlock"
                               Width="24"
                               TextAlignment="Center"
                               Margin="0,0,5,0" />
                    <TextBlock x:Name="TitleText"
                               FontWeight="Bold"
                               VerticalAlignment="Center" />
                </DockPanel>
            </Border>

            <!-- Main text -->
            <TextBlock x:Name="MainMessage"
                       Margin="0,10,0,5"
                       TextWrapping="Wrap" />

            <TextBlock x:Name="SubMessage"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap" />

            <!-- PROGRESS BAR (correct place) -->
            <ProgressBar x:Name="AutoCloseProgress"
                         Height="6"
                         Margin="0,0,0,10"
                         Minimum="0"
                         Maximum="100"
                         Value="100"
                         Visibility="Collapsed" />

            <!-- Buttons -->
            <StackPanel x:Name="ButtonsPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right" />
        </StackPanel>
    </Border>
</Window>